/*-----------------------------

Snow

-----------------------------*/

#snow
  background: cadetblue
  z-index: 5

  div
    box-sizing: border-box
    width: 200px
    height: 200px
    margin-left: -(@width/2)
    margin-top: -(@height/2 + 30)
    background-color: white(.05)
    background-repeat: no-repeat
    background-image: radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white(.5) 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      radial-gradient(circle, white 50%, transparent 50%),
                      linear-gradient(to right, lighten(saddlebrown,10), lighten(saddlebrown,10)),
                      linear-gradient(35deg, saddlebrown 30%,
                                             darkgreen 30%,
                                             darkgreen 39%,
                                             white 39%,
                                             white 45%,
                                             transparent 45%),
                      linear-gradient(-35deg, saddlebrown 30%,
                                             darkgreen 30%,
                                             darkgreen 39%,
                                             white 39%,
                                             white 45%,
                                             transparent 45%),
                      repeating-linear-gradient(to top, saddlebrown, saddlebrown 3px,
                                                        darken(saddlebrown,10) 3px,
                                                        darken(saddlebrown,10) 4px),
                      linear-gradient(to top, #444 85%, white 85%),
                      radial-gradient(ellipse, white 50%, white(0) 50%),
                      radial-gradient(ellipse, #eee 50%, white(0) 50%),
                      radial-gradient(ellipse, #ddd 50%, white(0) 50%)
    background-size: 6px 6px,
                     8px 8px,
                     8px 8px,
                     7px 7px,
                     5px 5px,
                     5px 5px,
                     6px 6px,
                     4px 4px,
                     6px 6px,
                     4px 4px,
                     4px 4px,
                     5px 5px,
                     4px 4px,
                     4px 4px,
                     4px 4px,
                     6px 6px,
                     4px 4px,
                     8px 8px,
                     6px 6px,
                     4px 4px,
                     8px 13px,
                     20px 20px,
                     20px 20px,
                     28px 24px,
                     4px 10px,
                     200% 100%,
                     200% 100%,
                     200% 100%
    background-position: 20% 20%,
                         50% 6%,
                         45% 35%,
                         80% 30%,
                         10% 48%,
                         55% 59%,
                         90% 53%,
                         30% 10%,
                         60% 10%,
                         40% 15%,
                         83% 20%,
                         30% 25%,
                         60% 24%,
                         20% 38%,
                         65% 40%,
                         40% 50%,
                         75% 52%,
                         26% 62%,
                         70% 70%,
                         30% 80%,
                         left 47px bottom 50px,
                         left 50px bottom 73px,
                         left 30px bottom 73px,
                         left 36px bottom 50px,
                         left 38px bottom 78px,
                         right -150px bottom -120px,
                         left -170px bottom -100px,
                         right -180px bottom -85px
    border-radius: 50%
    border: 4px solid mediumturquoise
    box-shadow: inset 10px 0 0 white(.4),
                inset -15px 0 0 black(.1)

    &:before
      width: 80%
      height: 60px
      left: 50%
      bottom: -40px
      margin-left: -(@width/2)
      background-color: silver
      border-radius: 5px
      box-shadow: inset 6px 0 0 black(.2),
                  inset 15px 0 0 white(.5),
                  inset -20px 0 0 black(.2),
                  inset -30px 0 0 white(.6),
                  inset -45px 0 0 black(.1)

    &:after
      width: 88%
      height: 20px
      left: 50%
      bottom: -57px
      margin-left: -(@width/2)
      background-color: silver
      border-radius: 10px
      box-shadow: inset 6px 0 0 black(.2),
                  inset 15px 0 0 white(.5),
                  inset -20px 0 0 black(.2),
                  inset -30px 0 0 white(.6),
                  inset -45px 0 0 black(.1),
                  0 10px 0  -3px black(.1)
