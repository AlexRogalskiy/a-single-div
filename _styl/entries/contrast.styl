/*-----------------------------

Contrast

-----------------------------*/


#contrast

  div
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-image: linear-gradient(to right, black 50%, white 50%)

    &:before,
    &:after
      width: 8em
      height: @width
      border-radius: 50%
      left: 50%
      top: 50%
      margin-left: -(@width/2)
      background-image: linear-gradient(to right, white 50%, black 50%)

    &:before
      margin-top: -8em
      @media (prefers-reduced-motion: no-preference)
        animation: contrast 2000ms infinite linear
    &:after
      @media (prefers-reduced-motion: no-preference)
        animation: contrast 2000ms infinite linear

@keyframes contrast
  0
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)
