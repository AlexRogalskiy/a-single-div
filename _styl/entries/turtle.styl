/*-----------------------------

Turtle

-----------------------------*/


#turtle
  background-color: darkolivegreen
  
  div
    width: 15em
    height: 15em
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background-repeat: no-repeat
    background-image: radial-gradient(ellipse at 50% 100%, limegreen 50%,
                                                        olivedrab 50.5%, olivedrab 56%,
                                                        alpha(olivedrab,0) 56.5%),
                      radial-gradient(ellipse at 50% 100%, limegreen 50%,
                                                        olivedrab 50.5%, olivedrab 56%,
                                                        alpha(olivedrab,0) 56.5%),
                      radial-gradient(ellipse at 50% 100%, limegreen 50%,
                                                        olivedrab 50.5%, olivedrab 56%,
                                                        alpha(olivedrab,0) 56.5%),
                      radial-gradient(ellipse at 50% 100%, limegreen 50%,
                                                        olivedrab 50.5%, olivedrab 56%,
                                                        alpha(olivedrab,0) 56.5%),
                      linear-gradient(tomato, tomato),
                      linear-gradient(-330deg, tomato 20%, alpha(tomato,0) 21%),
                      linear-gradient(-220deg, tomato 20%, alpha(tomato,0) 21%),
                      linear-gradient(orange, orange),
                      linear-gradient(330deg, orange 20%, alpha(orange,0) 21%),
                      linear-gradient(220deg, orange 20%, alpha(orange,0) 21%),
                      linear-gradient(dodgerblue, dodgerblue),
                      linear-gradient(-330deg, dodgerblue 20%, alpha(dodgerblue,0) 21%),
                      linear-gradient(-220deg, dodgerblue 20%, alpha(dodgerblue,0) 21%),
                      linear-gradient(mediumpurple, mediumpurple),
                      linear-gradient(330deg, mediumpurple 20%, alpha(mediumpurple,0) 21%),
                      linear-gradient(220deg, mediumpurple 20%, alpha(mediumpurple,0) 21%),
                      radial-gradient(ellipse at 50% 0, transparent 40%,
                                                        limegreen 41%,
                                                        limegreen 65%,
                                                        alpha(limegreen,0) 66%),
                      linear-gradient(to bottom, white 40%, #444 40%),
                      radial-gradient(ellipse at 50% 0, transparent 40%,
                                                        limegreen 41%,
                                                        limegreen 65%,
                                                        alpha(limegreen,0) 66%),
                      radial-gradient(ellipse at 50% 100%, tomato 40%, #444 41%),
                      radial-gradient(ellipse at 50% 0, transparent 40%,
                                                        limegreen 41%,
                                                        limegreen 65%,
                                                        alpha(limegreen,0) 66%),
                      radial-gradient(ellipse at 50% 100%, tomato 40%, #444 41%),
                      radial-gradient(ellipse at 50% 0, transparent 40%,
                                                        limegreen 41%,
                                                        limegreen 65%,
                                                        alpha(limegreen,0) 66%),
                      linear-gradient(to bottom, white 40%, #444 40%),
                      radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 51%),
                      radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 51%),
                      radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 51%),
                      radial-gradient(circle, limegreen 50%, alpha(limegreen,0) 51%)
    background-size: 25% 4%, 25% 4%, 25% 4%, 25% 4%,
                     38% 12%, 20% 15%, 20% 15%,
                     38% 12%, 20% 15%, 20% 15%,
                     38% 12%, 20% 15%, 20% 15%,
                     38% 12%, 20% 15%, 20% 15%,
                     25% 8%, 15% 5%,
                     25% 8%, 15% 5%,
                     25% 8%, 15% 5%,
                     25% 8%, 15% 5%,
                     50% 50%, 50% 50%, 50% 50%, 50% 50%
    background-position: 17% 27.5%, 83.5% 27.5%, 17% 79%, 83.5% 79%,
                         10% 20%, 0 9%, 0 28%,
                         90.5% 20%, 100% 9%, 100% 28%,
                         10% 76%, 0 68%, 0 87.3%,
                         90.5% 76%, 100% 68%, 100% 87.3%,
                         17.2% 38%, 20.3% 37%,
                         83.5% 38%, 80% 37%,
                         17.2% 92%, 20.5% 89%,
                         83.5% 92%, 80% 89%,
                         0 0, 100% 0, 0 100%, 100% 100%

    &:before,
    &:after
      width: 1em
      height: 1em
      top: 21%
      background-color: white

    &:before
      left: 15%
      border-radius: 0 90% 0 90%
      box-shadow: 6.85em 3.15em 0 white,
                  -3.15em 6.7em 0 white,
                   3.7em 9.9em 0 white
      transform: rotate(-25deg)
    
    &:after
      left: 28.3%
      border-radius: 90% 0 90% 0
      box-shadow: 6.85em -3.2em 0 white,
                  3.2em 6.7em 0 white,
                  9.9em 3.56em 0 white
      transform: rotate(25deg)
