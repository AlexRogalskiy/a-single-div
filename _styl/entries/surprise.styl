/*-----------------------------

Surprise

-----------------------------*/

#surprise
  background-color: brown

  div
    width: 17em
    height: 10em
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background-repeat: no-repeat
    background-image: linear-gradient(cadetblue, cadetblue),
                      linear-gradient(gold, gold),
                      linear-gradient(darken(gold,10),darken(gold,10)),
                      linear-gradient(darken(gold,10),darken(gold,10)),
                      linear-gradient(darken(gold,10),darken(gold,10)),
                      radial-gradient(ellipse at 0 0, gold 54%,
                                                      alpha(gold,0) 55%),
                      radial-gradient(ellipse at 100% 0, gold 54%,
                                                         alpha(gold,0) 55%),
                      linear-gradient(gold, gold),
                      linear-gradient(gold, gold),
                      radial-gradient(ellipse at 100% 50%, darken(gold,10) 60%,
                                                           alpha(gold,0) 61%),
                      linear-gradient(gold, gold),
                      linear-gradient(gold, gold),
                      repeating-linear-gradient(to right, saddlebrown,
                                                          saddlebrown .5em,
                                                          sandybrown .5em,
                                                          sandybrown 1em),
                      repeating-linear-gradient(to right, sandybrown,
                                                          sandybrown .5em,
                                                          saddlebrown .5em,
                                                          saddlebrown 1em),
                      radial-gradient(circle, darkturquoise 60%, alpha(darkturquoise,0) 60.5%),
                      radial-gradient(circle, darkturquoise 60%, alpha(darkturquoise,0) 60.5%),
                      radial-gradient(circle, darkturquoise 60%, alpha(darkturquoise,0) 60.5%),
                      radial-gradient(circle, paleturquoise 54%,
                                              darkturquoise 54.5%,
                                              darkturquoise 60%,
                                              alpha(darkturquoise, 0) 60.5%),
                      linear-gradient(to bottom, gold .3em, saturation(darkslateblue,20) .3em)
    background-size: 10.9em 2em,
                     13em 3.8em,
                     2em 3.8em,
                     .6em 1em,
                     .6em 1em,
                     2.5em 1.5em,
                     2.5em 1.5em,
                     .6em 1em,
                     .6em 1em,
                     2em 4.9em,
                     .3em 5em,
                     .3em 5em,
                     3em 1em,
                     3em 1em,
                     .3em .3em,
                     .3em .3em,
                     .3em .3em,
                     6em 6em,
                     14em 5em
    background-position: right 1em bottom 1.9em,
                         right bottom 1em,
                         left 2em bottom 1em,
                         left 2em bottom,
                         left 3.4em bottom,
                         left 4em bottom,
                         right bottom,
                         left 4em bottom,
                         right bottom,
                         left bottom 4.45em,
                         left 2em bottom 4em,
                         right 1em bottom 4em,
                         left 3.8em bottom 4.2em,
                         left 3.8em bottom 4.6em,
                         left 4.2em bottom 6em,
                         left 5.1em bottom 6.8em,
                         left 5.5em bottom 5.8em,
                         left 2.5em bottom 2.2em,
                         left 2em bottom 4em

    &:before,
    &:after
      font-family: Myriad Pro, Helvetica, Arial
      font-weight: bold

    &:before
      content: 'TRY ME'
      width: 5em
      height: @width
      display: grid
      place-content: center
      right: .5em
      bottom: 3em
      background-repeat: no-repeat
      background-image: linear-gradient(-7deg, transparent 30%,
                                               gold 30%,
                                               gold 37%,
                                               transparent 37%),
                        repeating-linear-gradient(180deg, papayawhip,
                                                          papayawhip .2em,
                                                          white(0) .21em,
                                                          white(0) .4em),
                        repeating-linear-gradient( 90deg, papayawhip,
                                                          papayawhip .2em,
                                                          white(0) .21em,
                                                          white(0) .4em),
                        linear-gradient(-7deg, alpha(peachpuff,0) 37%,
                                               peachpuff 37%)
      background-size: 100% 100%,
                       100% 1em,
                       1em 70%,
                       100% 100%
      background-position: 0 0,
                           0 47%,
                           50% 0,
                           0 0
      border-radius: 50%
      color: mediumpurple
      transform: rotate(7deg)

    &:after
      font-size: 15px
      content: 'EAT ME'
      width: 6em
      height: 1.1em
      padding-top: 1.4em
      left: 6.8em
      top: 3.05em
      background-repeat: space repeat, no-repeat
      background-image: radial-gradient(circle, palevioletred 68%, alpha(palevioletred,0) 68.5%),
                        linear-gradient(palevioletred, palevioletred)
      background-size: .6em .6em,
                       5.5em 2.5em
      background-position: 50% 0,
                           50% .25em
      color: pink
      text-align: center
