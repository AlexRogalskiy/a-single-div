#hot
  background-color: lightsalmon

  div
    width: 100px
    height: 200px
    margin-left: -(@width/2)
    margin-top: -65px
    background-color: darken(lemonchiffon,5)
    background-repeat: no-repeat, no-repeat, repeat-x, repeat-x
    background-image: linear-gradient(to bottom, yellowgreen 3em, transparent 3em),
                      linear-gradient(black(.1), black(.1)),
                      radial-gradient(ellipse, darken(yellowgreen,5) 40%, white(0) 45%),
                      linear-gradient(to right, transparent 40%,
                                                yellowgreen 40%,
                                                yellowgreen 60%,
                                                transparent 60%)
    background-size: 100% 100%,
                     25% 38%,
                     10% 15%,
                     10% 8%
    background-position: 0 0,
                         100% 70%,
                         50% 32%,
                         50% 30%
    border: 2px solid darkolivegreen
    border-radius: 40px
    border-bottom-left-radius: 50px 15px
    border-bottom-right-radius: 50px 15px
    box-shadow: inset  1em -.6em 0 -1em white,
                inset -1em -.6em 0 -1em white,
                inset  0   -.3em 0 0 alpha(darkolivegreen,.3),
