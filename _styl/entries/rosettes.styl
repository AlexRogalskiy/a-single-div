/*-----------------------------

Rosettes

-----------------------------*/

$rose-1 = lightslategray

#rosette-1
  background: $rose-1

  div
    width: 46px
    height: @width
    margin-left: -(@width/2)
    margin-top: -(@height/2)
    background-repeat: no-repeat
    background-image: linear-gradient( 35deg, transparent 55%, white 55.1%,
                                              white 58.1%, transparent 58.2%),
                      linear-gradient(-35deg, transparent 55%, white 55.1%,
                                              white 58.1%, transparent 58.2%),
                      linear-gradient( 35deg, transparent 43%, white 43.1%,
                                              white 46.1%, transparent 46.2%),
                      linear-gradient(-35deg, transparent 43%, white 43.1%,
                                              white 46.1%, transparent 46.2%),
                      linear-gradient(to right, white, white),
                      linear-gradient(to right, white, white),
                      linear-gradient( 55deg, transparent 40%, white 40.1%,
                                              white 43.1%, transparent 43.2%),
                      linear-gradient(-55deg, transparent 38%, white 38.1%,
                                              white 41.1%, transparent 41.2%),
                      linear-gradient( 55deg, transparent 59%, white 59.1%,
                                              white 62.1%, transparent 62.2%),
                      linear-gradient(-55deg, transparent 57%, white 57.1%,
                                              white 60.1%, transparent 60.2%)
    background-position: left top,
                         right top,
                         right bottom,
                         left bottom,
                         center center,
                         center center,
                         left top,
                         right top,
                         right bottom,
                         left bottom
    background-size: 50% 50%,
                     50% 50%,
                     50% 50%,
                     50% 50%,
                     1px 12px,
                     14px 1px,
                     50% 50%,
                     50% 50%,
                     50% 50%,
                     50% 50%

    &:before,
    &:after
      width: 30px
      height: @width
      left: -@width
      top: -@width
      background-color: $rose-1
      box-shadow: 0 0 0 1px white,
                  76px 0 0 0 $rose-1,
                  76px 0 0 1px white,
                  0 76px 0 0 $rose-1,
                  0 76px 0 1px white,
                  76px 76px 0 0 $rose-1,
                  76px 76px 0 1px white

    &:after
      transform: rotate(45deg)
      left: 8px
      top: -46px

$rose-2 = darken(lightslategray,5)

#rosette-2
