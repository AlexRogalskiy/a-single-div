/*-----------------------------

The Shining Carpet

-----------------------------*/

$sh-orange = #df5f18
$sh-red = #981f24
$sh-height = 400px

#theshining
  height: $sh-height
  position: relative
  overflow: hidden

  &:before,
  &:after
    content: ''
    width: 100%
    height: $sh-height
    position: absolute
    left: 0
    background-size: 110px 101px
    background-repeat: repeat space

  &:before
    top: 0
    background-image: linear-gradient( 149deg, black 6.5%, $sh-orange 6.5%,
                                              $sh-orange 17%, transparent 17%),
                      linear-gradient(-149deg, black 6.5%, $sh-orange 6.5%,
                                               $sh-orange 17%, transparent 17%),
                      linear-gradient(  90deg, black 6.8%, transparent 6.8%,
                                               transparent 93.5%, black 93.5%),
                      linear-gradient( 149deg, black 28%, transparent 28%),
                      linear-gradient(-149deg, black 28%, transparent 28%),
                      linear-gradient( 149deg, $sh-orange 38.5%, transparent 38.5%,
                                               transparent 83%, $sh-orange 83%,
                                               $sh-orange 93%, black 93%),
                      linear-gradient(-149deg, $sh-orange 38.5%, transparent 38.5%,
                                               transparent 83%, $sh-orange 83%,
                                               $sh-orange 93%, black 93%),
                      linear-gradient(  90deg, $sh-orange 21%, transparent 21%,
                                               transparent 79%, $sh-orange 79%),
                      linear-gradient( 149deg, black 49%, transparent 49%,
                                               transparent 73%, black 73%),
                      linear-gradient(-149deg, black 49%, transparent 49%,
                                               transparent 73%, black 73%),
                      linear-gradient(  90deg, black 34%, transparent 34%,
                                               transparent 66%, black 66%),
                      linear-gradient(to bottom, transparent 10%, $sh-red 10%,
                                                 $sh-red 90%, transparent 90%)

  &:after
    top: 94px
    background-position: 55px 0
    background-image: linear-gradient( 31deg, black 8.3%, $sh-orange 8.3%,
                                              $sh-orange 17.4%, transparent 17.4%),
                      linear-gradient(-31deg, black 8.3%, $sh-orange 8.3%,
                                               $sh-orange 17.4%, transparent 17.4%),
                      linear-gradient( 90deg, black 7%, transparent 7%,
                                               transparent 93%, black 93%),
                      linear-gradient( 31deg, black 29%, transparent 29%),
                      linear-gradient(-31deg, black 29%, transparent 29%),
                      linear-gradient( 31deg, $sh-orange 39%, transparent 39%,
                                               transparent 83%, $sh-orange 83%,
                                               $sh-orange 93%, black 93%),
                      linear-gradient(-31deg, $sh-orange 38.5%, transparent 38.5%,
                                               transparent 83%, $sh-orange 83%,
                                               $sh-orange 93%, black 93%),
                      linear-gradient( 90deg, $sh-orange 21%, transparent 21%,
                                               transparent 79%, $sh-orange 79%),
                      linear-gradient( 31deg, black 49%, transparent 49%,
                                               transparent 73%, black 73%),
                      linear-gradient(-31deg, black 49%, transparent 49%,
                                               transparent 73%, black 73%),
                      linear-gradient( 90deg, black 34%, transparent 34%,
                                               transparent 66%, black 66%),
                      linear-gradient(to bottom, transparent 10%, $sh-red 10%,
                                                 $sh-red 90%, transparent 90%)
