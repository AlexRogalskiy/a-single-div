/*-----------------------------

Watch

-----------------------------*/

$hulu = #1ce783

#watch
  background: #444

  div
    width: 7em
    height: @width
    margin-left: -12em
    @media (max-width: 400px)
      margin-left: -10.3em
    margin-top: -(@height/2)
    background-color: black
    background-repeat: no-repeat
    background-image: radial-gradient(ellipse, black 50%, transparent 52%),
                      linear-gradient(70deg, transparent 40%,
                                             #e50913 41%,
                                             #e50913 60%,
                                             transparent 61%),
                      linear-gradient(73deg, transparent 31%,
                                             black(.3) 45%,
                                             black(.3) 60%,
                                             transparent 68%),
                      linear-gradient(#b1060f,#b1060f),
                      linear-gradient(#b1060f,#b1060f)
    background-size: 8em 2em,
                     3em 5em,
                     3em 5em,
                     .9em 5em,
                     .9em 5em
    background-position: 50% 114%,
                         50% 54%,
                         50% 54%,
                         35% 54%,
                         66.5% 54%
    border-radius: 15px
    box-shadow: 8.5em 0 0 $hulu,
                17em 0 0 #222

    &:after
      width: 15em
      height: 100%
      left: 8.55em
      background-repeat: no-repeat
      background-image: linear-gradient(to top, $hulu 37%,
                                                transparent 37%,
                                                transparent 63%,
                                                $hulu 63%),
                        linear-gradient(white, white),
                        linear-gradient($hulu, $hulu),
                        linear-gradient(white, white),
                        linear-gradient($hulu, $hulu),
                        linear-gradient(55deg, transparent 70%, #222 71%),
                        linear-gradient(125deg, transparent 70%, #222 71%),
                        linear-gradient(55deg, #222 40%, transparent 41%),
                        linear-gradient(125deg, #222 40%, transparent 41%),
                        radial-gradient(circle, #f8bc02 20%, #d07c1a)
      background-size: 6em 90%,
                       .35em 90%,
                       1.5em 3.2em,
                       .35em 90%,
                       1.5em 3.2em,
                       5em 5em,
                       5em 5em,
                       5em 2.5em,
                       5em 2.5em,
                       4.2em 5em
      background-position: .5em 50%,
                           1.15em 50%,
                           2.3em 0,
                           4em 50%,
                           4.6em 0,
                           9.5em 50%,
                           9.5em 50%,
                           9.5em 1em,
                           9.5em 3.5em,
                           10em 50%

    &:before
      width: .45em
      height: 2em
      left: 10.05em
      top: 3.5em
      background-color: $hulu
      border-radius: 1px
      box-shadow: 0 0 0 .35em white,
                  1.4em -1.5em 0 $hulu,
                  1.4em -1.5em 0 .35em white,
                  3.5em -1.5em 0 $hulu,
                  3.5em -1.5em 0 .35em white
