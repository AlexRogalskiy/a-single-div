/*-----------------------------

Legend

-----------------------------*/

$golden-l = #C29D4B
$golden-m = #907335
$golden-d = #836930
$golden-xd = darken($golden-d,10)

#legend
  background: #444
  z-index: 5

  div
    width: 200px
    height: 220px
    margin-left: -(@width/2 + 7)
    margin-top: -(@height/2 - 7)
    background-repeat: no-repeat
    background-image: linear-gradient(to bottom, black(.3), black(.3) 70%),
                      linear-gradient(to right, black(.3), black(.3))
    background-size: 100% 80%,
                     86% 20%
    background-position: 0 0,
                         50% 100%

    &:before
      width: 200px
      height: 220px
      left: 7px
      top: -7px
      background-repeat: no-repeat
      background-image: linear-gradient(to right, black(.6), black(.3) 75%),
                        repeating-linear-gradient(to bottom, transparent, transparent 2.5%,
                                                             $golden-d 2.5%, $golden-d 5%),
                        linear-gradient(to right, $golden-d,  $golden-d),
                        linear-gradient(to right, white(.4), white(.4)),
                        linear-gradient(to right, $golden-xd, $golden-xd),
                        linear-gradient(to bottom, #333, #333),
                        linear-gradient(to bottom, #333, #333),
                        linear-gradient(to bottom, white(.3), white(.3)),
                        linear-gradient(to bottom, white(.3), white(.3)),
                        linear-gradient(to bottom, white(.3), white(.3)),
                        linear-gradient(to right,  white(.3), white(.3)),
                        linear-gradient(to left,   black(.3), black(.3)),
                        linear-gradient(to bottom, black(.3), black(.3)),
                        linear-gradient(to bottom, black(.3), black(.3)),
                        linear-gradient(to right,  white(.2), white(.2)),
                        linear-gradient(to left,   black(.3), black(.3)),
                        linear-gradient(to bottom, black(.3), black(.3)),
                        linear-gradient(50deg, transparent 50%, $golden-d 50%),
                        linear-gradient(-50deg, transparent 50%, $golden-d 50%),
                        linear-gradient(50deg, transparent 50%, black(.3) 50%),
                        linear-gradient(-50deg, transparent 50%, black(.3) 50%),
                        linear-gradient(-50deg, transparent 50%, white(.3) 50%),
                        radial-gradient(ellipse at bottom center, $golden-d 40%, transparent 40%),
                        linear-gradient(to bottom, $golden-l, $golden-m 70%),
                        linear-gradient(to right, $golden-d, $golden-d)
      background-size: 20% 11%,
                       18.5% 88%,
                       18.5% 7%,
                       1% 97%,
                       20% 98.5%,
                       8% 2%,
                       8% 2%,
                       8% 1%,
                       8% 1%,
                       100% 1.5%,
                       1.5% 80%,
                       1.5% 80%,
                       8.5% 1.5%,
                       8.5% 1.5%,
                       1.5% 21.5%,
                       1.5% 21.5%,
                       86% 1.5%,
                       5% 5%,
                       5% 5%,
                       7% 7%,
                       12% 1%,
                       6% 6%,
                       300% 80%,
                       100% 80%,
                       86% 20%
      background-position: 23% 0,
                           23.5% 0,
                           23.5% 97%,
                           19% 0,
                           23% 0,
                           5% 0,
                           95% 0,
                           5% 2.5%,
                           95% 2.5%,
                           0 0,
                           0 0,
                           100% 0,
                           0 80%,
                           100% 80%,
                           7% 100%,
                           93% 100%,
                           50% 100%,
                           47.5% 79.3%,
                           52.5% 79.3%,
                           46% 80%,
                           57% 75.5%,
                           53% 80.5%,
                           40% 0,
                           0 0,
                           50% 100%

    &:after
      width: 39%
      height: 65%
      right: 13%
      top: -1.7%
      background-color: #C1A465
      border-radius: 0 0 6px 6px
      border-left: 2px solid black(.2)
      border-bottom: 2px solid black(.2)
      border-right: 2px solid white(.2)
