/*-----------------------------

Wild

-----------------------------*/

$wild = lighten(cornflowerblue,27)

#wild
  background-color: $wild
  background-image: linear-gradient(180deg, $wild       10%,
                                            transparent 10%,
                                            transparent 85%,
                                            $wild       85%),
                    radial-gradient(circle at 75% 59%, transparent    10.5%,
                                                       rebeccapurple 10.5%,
                                                       rebeccapurple 18%,
                                                       transparent    18%),
                    linear-gradient( 90deg, transparent    85%,
                                            rebeccapurple 85%,
                                            rebeccapurple 91%,
                                            transparent    91%),
                    linear-gradient( 90deg, transparent 50.5%,
                                            slateblue   50.5%,
                                            slateblue   56.5%,
                                            transparent 56.5%),
                    linear-gradient(180deg, transparent 23%,
                                            $wild       23%,
                                            $wild       32%,
                                            transparent 32%),
                    linear-gradient( 90deg, transparent 40%,
                                            steelblue   40%,
                                            steelblue   46%,
                                            transparent 46%),
                    linear-gradient(180deg, $wild 30%,
                                            transparent 30%),
                    linear-gradient( 60deg, transparent   17%,
                                            cornflowerblue 17%,
                                            cornflowerblue 22%,
                                            transparent   22%,
                                            transparent   25%,
                                            cornflowerblue 25%,
                                            cornflowerblue 30%,
                                            transparent   30%),
                    linear-gradient( 90deg, transparent   30%,
                                            cornflowerblue 30%,
                                            cornflowerblue 36%,
                                            transparent   36%)
  background-size: 90px 50px
  background-position: center center
