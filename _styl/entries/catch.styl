/*-----------------------------

Catch

-----------------------------*/

$snitch-gold = #b1996e
$snitch-bright = #ffe9a5
$snitch-brown = #84745e

#catch
  background-color: lemonchiffon

  div
    width: 70px
    height: 70px
    margin-left: -(@width/2)
    margin-top: -(@height/2 - 50)
    background-color: $snitch-gold
    background-repeat: no-repeat
    background-image: radial-gradient(circle at top left, transparent   55%,
                                                          $snitch-brown 55%,
                                                          $snitch-brown 58%,
                                                          transparent   58%,
                                                          transparent   64%,
                                                          $snitch-brown 64%,
                                                          $snitch-brown 67%,
                                                          transparent   67%),
                      radial-gradient(circle at top right, transparent   55%,
                                                           $snitch-brown 55%,
                                                           $snitch-brown 58%,
                                                           transparent   58%,
                                                           transparent   64%,
                                                           $snitch-brown 64%,
                                                           $snitch-brown 67%,
                                                           transparent   67%),
                      radial-gradient(circle, $snitch-bright 20%, white(0) 70%),
                      radial-gradient(circle, $snitch-bright 10%, white(0) 70%),
                      radial-gradient(circle at bottom left, transparent   55%,
                                                             $snitch-brown 55%,
                                                             $snitch-brown 58%,
                                                             $snitch-gold  58%,
                                                             $snitch-gold  64%,
                                                             $snitch-brown 64%,
                                                             $snitch-brown 67%,
                                                             $snitch-gold  67%),
                      radial-gradient(circle at bottom right, transparent   55%,
                                                              $snitch-brown 55%,
                                                              $snitch-brown 58%,
                                                              $snitch-gold  58%,
                                                              $snitch-gold  64%,
                                                              $snitch-brown 64%,
                                                              $snitch-brown 67%,
                                                              $snitch-gold  67%),
                      repeating-linear-gradient(to bottom, transparent,
                                                           transparent    5px,
                                                           $snitch-brown  5px,
                                                           $snitch-brown  7px,
                                                           lighten($snitch-gold,5)  7px,
                                                           lighten($snitch-gold,5) 12px,
                                                           $snitch-brown 12px,
                                                           $snitch-brown 14px)
    background-size: 50% 50%,
                     50% 50%,
                     60% 60%,
                     40% 40%,
                     50% 50%,
                     50% 50%,
                     100% 50%
    background-position: left  0 top 0,
                         right 0 top 0,
                         left 25% top 5%,
                         right -10px top 25%,
                         left  0 bottom 0,
                         right 0 bottom 0,
                         left  0 bottom -3px
    border-radius: 50%
    box-shadow: inset 0 5px 5px $snitch-bright,
                inset -6px -6px 10px $snitch-brown

    &:before,
    &:after
      box-sizing: border-box
      width: 170px
      height: 60px
      top: -74px
      background-repeat: no-repeat
      background-size: 100% 100%,
                       100% 100%
      background-clip: border-box,
                       padding-box
      border-top: 10px solid transparent

    &:before
      left: -139px
      background-image: repeating-linear-gradient(-40deg, transparent,
                                                          transparent  2px,
                                                          $snitch-gold 2px,
                                                          $snitch-gold 3px,
                                                          transparent  3px,
                                                          transparent  5px),
                        repeating-linear-gradient(-40deg, $snitch-gold,
                                                            $snitch-gold 3px,
                                                            transparent  3px,
                                                            transparent  5px)
      background-position: 10px -20px,
                           3px -15px
      border-radius: 0 100% 0 100%
      border-right: 4px solid transparent
      box-shadow: 1px -1px 1px $snitch-gold,
                  2px -2px 0 $snitch-bright
      transform: rotate(25deg)

    &:after
      right: -139px
      background-image: repeating-linear-gradient(40deg, transparent,
                                                         transparent  2px,
                                                         $snitch-gold 2px,
                                                         $snitch-gold 3px,
                                                         transparent  3px,
                                                         transparent  5px),
                        repeating-linear-gradient(40deg, $snitch-gold,
                                                         $snitch-gold 3px,
                                                         transparent  3px,
                                                         transparent  5px)
      background-position: -10px -20px,
                           -3px -15px
      border-radius: 100% 0 100% 0
      border-left: 4px solid transparent
      box-shadow: -1px -1px 1px $snitch-gold,
                  -2px -2px 0 $snitch-bright
      transform: rotate(-25deg)
